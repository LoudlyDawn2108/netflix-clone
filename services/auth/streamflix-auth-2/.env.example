# Server
PORT=3000
NODE_ENV=development
API_PREFIX=api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=streamflix
DB_SCHEMA=public
DB_SYNC=false
DB_LOGGING=false
DB_CONNECTION_POOL_SIZE=20
DB_MIGRATIONS_RUN=true
DB_SEED=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=86400
REDIS_MAX_ITEMS=1000

# JWT
JWT_SECRET=streamflix-super-secret
JWT_REFRESH_SECRET=streamflix-refresh-secret
JWT_ACCESS_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Security settings
PASSWORD_HASH_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15
SESSION_TTL=86400

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_HISTORY_SIZE=5
MAX_PASSWORD_AGE=90

# CORS
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# CSRF
CSRF_ENABLED=true
CSRF_COOKIE_NAME=XSRF-TOKEN
CSRF_HEADER_NAME=X-XSRF-TOKEN

# OAuth Configuration
OAUTH_BASE_CALLBACK_URL=http://localhost:3000/api/auth
OAUTH_REDIRECT_AFTER_LOGIN_URL=http://localhost:3000/login/success

# Google OAuth
OAUTH_GOOGLE_ENABLED=true
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# GitHub OAuth
OAUTH_GITHUB_ENABLED=true
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
OAUTH_GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Observability Settings
LOG_LEVEL=info
LOGS_DIR=logs
TRACING_ENABLED=true
OTLP_ENDPOINT=http://jaeger:4318/v1/traces
PROMETHEUS_ENABLED=true
SERVICE_VERSION=1.0.0